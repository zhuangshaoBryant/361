<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhuang="http://schemas.android.com/apk/res/com.zhuang.safe361"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:text="设置中心" 
        style="@style/TitleStyle"/>
    
    <com.zhuang.safe361.view.SettingItemView 
       android:id="@+id/siv_update"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       zhuang:desc_off="自动更新已关闭"
       zhuang:desc_on="自动更新已开启"
       zhuang:title="自动更新设置"
        />
    
    <com.zhuang.safe361.view.SettingItemView 
       android:id="@+id/siv_address"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       zhuang:desc_off="归属地显示已经关闭"
       zhuang:desc_on="归属地显示已经开启"
       zhuang:title="归属地显示设置"
        />
    
    <com.zhuang.safe361.view.SettingClickView 
       android:id="@+id/scv_address_style"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        />
    
    <com.zhuang.safe361.view.SettingClickView 
       android:id="@+id/scv_address_location"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        />

    <com.zhuang.safe361.view.SettingItemView
        android:id="@+id/siv_blacknumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zhuang:desc_off="黑名单拦截已经关闭"
        zhuang:desc_on="黑名单拦截已经开启"
        zhuang:title="黑名单拦截设置"
        />

    <com.zhuang.safe361.view.SettingItemView
        android:id="@+id/siv_app_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zhuang:desc_off="程序锁已经关闭"
        zhuang:desc_on="程序锁已经开启"
        zhuang:title="程序锁设置"
        />

</LinearLayout>
